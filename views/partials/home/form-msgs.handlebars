{{#if success_message}}          <!-- this is used for flash messages -->

    <div class="alert alert-info">
        {{success_message}}
    </div>

{{/if}}

{{#if error_message}}

<div class="alert alert-danger">
    {{error_message}}
</div>

{{/if}}

{{#if error}}

    <div class="alert alert-danger">
        {{error}}
    </div>

{{/if}}


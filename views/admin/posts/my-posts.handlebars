<h1>My Posts</h1>

{{> home/form-msgs}}

<table class="table table-bordered">

    <thead>
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>File</th>
        <th>Category</th>
        <th>Status</th>
        <th>allowComments</th>
        <th>View Post</th>
        <th>Date</th>
        <th></th>
    </tr>

    </thead>

    <tbody>
    {{#each posts}}
        <tr>
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td><img height="30" src="/uploads/{{file}}"></td>
            <td>{{category.name}}</td>
            <td>{{status}}</td>
            <td>{{allowComments}}</td>
            <td><a href="/post/{{slug}}">View</a></td>
            <td>{{generateDate date "MMMM Do YYYY"}}</td>
            <td><a href="/admin/posts/edit/{{id}}" class="btn btn-info">Edit</a></td>
            <td>
                <form action="/admin/posts/delete/{{id}}?_method=DELETE" method="post">
                    <button type="submit" class="btn btn-danger">DELETE</button>
                </form>
            </td>
        </tr>
    {{/each}}

    </tbody>



</table>
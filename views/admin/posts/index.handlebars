<h1>All Posts</h1>

<table class="table table-bordered">

    <thead>
    <tr>
            <th>ID</th>
            <th>Title</th>
            <th>File</th>
            <th>Status</th>
            <th>allowComments</th>
            <th></th>
    </tr>

    </thead>

    <tbody>
    {{#each posts}}
    <tr>
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td><img height="30" src="/uploads/{{file}}"></td>
            <td>{{status}}</td>
            <td>{{allowComments}}</td>
            <td><a href="/admin/posts/edit/{{id}}" class="btn btn-info">Edit</a></td>
            <td>
                <form action="/admin/posts/delete/{{id}}?_method=DELETE" method="post">
                    <button type="submit" class="btn btn-danger">DELETE</button>
                </form>
            </td>
        {{/each}}
    </tr>

    </tbody>



</table>
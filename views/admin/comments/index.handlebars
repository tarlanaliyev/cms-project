<h1>Commnents</h1>

<table class="table table-bordered">

    <thead>
    <tr>
        <th>ID</th>
        <th>Owner</th>
        <th>Date</th>
    </tr>

    </thead>

    <tbody>
    {{#each comments}}
        <tr>
            <td>{{id}}</td>
            <td>{{user.firstName}} {{user.lastName}}</td>
            <td>{{generateDate date "MMMM Do YYYY"}}</td>
            <td>

                <form action="/admin/comments/delete/{{id}}?_method=DELETE" method="post">
                    <button type="submit" class="btn btn-danger">DELETE</button>
                </form>

            </td>

        </tr>
    {{/each}}

    </tbody>



</table>
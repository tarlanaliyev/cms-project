{{> home/form-msgs}}
<div class="row">
    <div class="col-sm-4">
        <h1>Create a Category</h1>
        <form action="/admin/categories/create" method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input name="name" type="text" placeholder="Enter a category name" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

<br>

<div class="row">
    <div class="col-sm-8">
        <h1>Categories</h1>
        <table class="table">
            <thead>
            <tr>
                <th>id</th>
                <th>Name</th>
                <th>Date</th>
            </tr>
            </thead>

            <tbody>
        {{#each categories}}
            <tr>
                <td>{{id}}</td>
                <td>{{name}}</td>
                <td>{{generateDate date "MMMM Do YYYY"}}</td>
                <td><a href="/admin/categories/edit/{{id}}" class="btn btn-info">Edit</a></td>
                <td>
                    <form action="/admin/categories/delete/{{id}}?_method=DELETE" method="post">
                        <button type="submit" class="btn btn-danger">DELETE</button>
                    </form>
                </td>
            </tr>
        {{/each}}
            </tbody>
        </table>
    </div>

</div>